{
  "compilerOptions": {
    "target": "es2020",
    "rootDir": "src",
    "outDir": "dist/src",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["src"]
}
