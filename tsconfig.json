{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es2018"],
    "strict": true,
    "esModuleInterop": true,
    // "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "stripInternal": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "outDir": "dist/esm5",
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "include": ["./src", "./test"],
  "compileOnSave": false
}
