{
  "compilerOptions": {
    "target": "es2020",
    "rootDir": "src",
    "outDir": "dist",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "noEmitOnError": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["src"]
}
